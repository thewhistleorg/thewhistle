{
  "name": "thewhistle",
  "description": "The Whistle prototype",
  "author": "Chris Veness",
  "license": "Proprietory",
  "version": "0.0.0",
  "main": "app.js",
  "scripts": {
    "start": "forever --minUptime 1000 --spinSleepTime 1000 -c 'node -r esm' app.js",
    "start-dev": "nodemon -e js,yaml,json,html --ignore reports/ -r esm app.js",
    "start-devtools": "nodemon --inspect -e js,json,html -r esm app.js",
    "test": "npm run test-node && npm run test-frontend",
    "test-node": "mocha --exit -r esm test/*/*.js",
    "test-unit": "mocha --exit -r esm test/unit/*.js",
    "test-intgn": "mocha --exit -r esm test/integration/*.js",
    "test-frontend": "node -r esm app.js & pid=$!; cypress run; status=$?; kill -9 $pid; rm -r ./cypress; exit $status",
    "test-smoke": "mocha --exit -r esm test/staging-smoke-tests.js",
    "lint": "eslint .",
    "stylelint": "stylelint public/css/*.css",
    "cover": "nyc --require esm --reporter=html npm run test-node; rm -r ./.nyc_output",
    "cover-unit": "nyc --require esm --reporter=html npm run test-unit; rm -r ./.nyc_output",
    "cover-intgn": "nyc --require esm --reporter=html npm run test-intgn; rm -r ./.nyc_output",
    "apidoc": "apidoc -i app-api -o app-api/apidoc/apidoc",
    "heroku-postbuild": "npm run test-smoke"
  },
  "engines": {
    "node": "^10.5.0"
  },
  "dependencies": {
    "aws-sdk": "^2.421.0",
    "chrono-node": "^1.3.11",
    "dateformat": "^3.0.3",
    "debug": "^4.1.1",
    "dot-prop": "^4.2.0",
    "dotenv": "^7.0.0",
    "esm": "^3.2.17",
    "exiftool-vendored": "^8.5.0",
    "forever": "^0.15.3",
    "fs-extra": "^7.0.1",
    "geodesy": "^1.1.3",
    "glob": "^7.1.3",
    "google-libphonenumber": "^3.2.2",
    "handlebars": "^4.1.0",
    "html-pdf": "^2.2.0",
    "html-to-text": "^4.0.0",
    "isemail": "^3.2.0",
    "jimp": "^0.6.0",
    "js-yaml": "^3.12.2",
    "jsdom": "^14.0.0",
    "json-schema-ref-parser": "^6.1.0",
    "json2csv": "^4.3.5",
    "jsonschema": "^1.2.4",
    "jsonwebtoken": "^8.5.0",
    "koa": "^2.7.0",
    "koa-body": "^4.1.0",
    "koa-compose": "^4.1.0",
    "koa-compress": "^3.0.0",
    "koa-convert": "^1.2.0",
    "koa-flash": "^1.0.0",
    "koa-handlebars": "^2.0.0",
    "koa-lusca": "git://github.com/chrisveness/koa-lusca",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.0",
    "koa-session": "^5.10.1",
    "koa-static": "^5.0.0",
    "markdown-it": "^8.4.2",
    "markdown-it-anchor": "^5.0.2",
    "moment": "^2.24.0",
    "mongodb": "3.1.13",
    "node-fetch": "^2.3.0",
    "node-geocoder": "^3.22.0",
    "nodejs-info": "^1.2.0",
    "nodemailer": "^5.1.1",
    "scrypt-kdf": "^2.0.0",
    "slugify": "^1.3.4",
    "twilio": "^3.29.1",
    "useragent": "^2.3.0",
    "uuid-mongodb": "^1.1.4",
    "xlsx": "^0.14.1",
    "xmldom": "^0.1.27",
    "xmlify": "^1.1.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.7",
    "babel-eslint": "^10.0.1",
    "base-64": "^0.1.0",
    "chai": "^4.2.0",
    "cypress": "3.1.5",
    "eslint": "^5.15.1",
    "eslint-plugin-promise": "^4.0.1",
    "espree": "^5.0.1",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "npm-check": "^5.9.0",
    "npm-check-updates": "^3.0.8",
    "nyc": "^13.3.0",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "supertest": "^3.4.2"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "mocha": true,
      "node": true
    },
    "plugins": [
      "promise"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:promise/recommended"
    ],
    "rules": {
      "array-bracket-spacing": [ "error", "always" ],
      "comma-dangle": [ "error", "always-multiline" ], "comma-spacing": [ "error" ],
      "curly": [ "error", "multi-line" ],
      "indent": [ "error", 4, { "SwitchCase": 1 } ],
      "key-spacing": [ "error", { "align": "value" } ],
      "keyword-spacing": [ "error" ],
      "no-case-declarations": "off",
      "no-console": [ "warn", { "allow": [ "error", "info" ] } ],
      "no-redeclare": "warn",
      "no-shadow": "warn",
      "no-unused-vars": "warn",
      "no-var": "error",
      "object-curly-spacing": [ "error", "always" ],
      "prefer-const": "error",
      "quotes": [ "error", "single", "avoid-escape" ],
      "require-await": "error",
      "semi": [ "error", "always" ],
      "space-before-blocks": [ "error", "always" ],
      "space-in-parens": [ "error" ],
      "strict": [ "error", "global" ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "block-opening-brace-space-before": [ "always", { "severity": "warning" } ],
      "color-hex-length": "long",
      "comment-empty-line-before": null,
      "indentation": 4,
      "selector-class-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
      "selector-list-comma-newline-after": "never-multi-line",
      "string-quotes": "single"
    }
  }
}
