{
  "name": "thewhistle",
  "description": "The Whistle prototype",
  "author": "Chris Veness",
  "license": "Proprietory",
  "version": "0.0.0",
  "main": "app.js",
  "scripts": {
    "start": "forever --minUptime 1000 --spinSleepTime 1000 -c 'node -r esm' app.js",
    "start-dev": "nodemon -e js,json,html --ignore db/reports.json --ignore static/report-docs/ -r esm app.js",
    "start-devtools": "nodemon --inspect -e js,json,html app.js",
    "test": "mocha --exit -r esm test/*/*.js && npm run test-frontend",
    "test-unit": "mocha --exit -r esm test/unit/*.js",
    "test-intgn": "mocha --exit -r esm test/integration/*.js",
    "test-frontend": "node -r esm app.js & pid=$!; cypress run; kill -9 $pid; rm -r ./cypress",
    "test-smoke": "mocha --exit -r esm test/staging-smoke-tests.js",
    "lint": "npm run lint-node; npm run lint-browser",
    "lint-node": "eslint --env node --ignore-pattern public .",
    "lint-browser": "eslint --env browser public/",
    "stylelint": "stylelint public/css/*.css",
    "cover": "nyc --require esm --reporter=html mocha --exit -r esm test/*/*.js; rm -r ./.nyc_output",
    "cover-unit": "nyc --require esm --reporter=html npm run test-unit; rm -r ./.nyc_output",
    "cover-intgn": "nyc --require esm --reporter=html npm run test-intgn; rm -r ./.nyc_output",
    "apidoc": "apidoc -i app-api -o app-api/apidoc/apidoc"
  },
  "engines": {
    "node": "^10.0.0"
  },
  "dependencies": {
    "aws-sdk": "^2.212.1",
    "chrono-node": "^1.3.5",
    "dateformat": "^3.0.3",
    "debug": "^3.1.0",
    "dotenv": "^5.0.1",
    "esm": "^3.0.7",
    "exiftool-vendored": "^4.17.0",
    "forever": "^0.15.3",
    "geodesy": "^1.1.2",
    "glob": "^7.1.2",
    "glob-promise": "^3.3.0",
    "google-libphonenumber": "^3.1.0",
    "handlebars": "^4.0.11",
    "html-pdf": "^2.2.0",
    "html-to-text": "^4.0.0",
    "isemail": "^3.1.1",
    "jimp": "^0.2.28",
    "js-yaml": "^3.11.0",
    "jsdom": "^11.6.2",
    "json2csv": "^4.0.2",
    "jsonwebtoken": "^8.1.1",
    "koa": "^2.5.0",
    "koa-body": "^2.5.0",
    "koa-compose": "^4.0.0",
    "koa-compress": "^3.0.0",
    "koa-convert": "^1.2.0",
    "koa-flash": "^1.0.0",
    "koa-handlebars": "^2.0.0",
    "koa-lusca": "git://github.com/chrisveness/koa-lusca",
    "koa-router": "^7.4.0",
    "koa-send": "^4.1.3",
    "koa-session": "^5.8.1",
    "koa-static": "^4.0.2",
    "markdown-it": "^8.4.1",
    "markdown-it-anchor": "^4.0.0",
    "markdown-it-include": "^1.0.0",
    "moment": "^2.20.1",
    "mongodb": "^3.0.3",
    "node-fetch": "^2.0.0",
    "node-geocoder": "^3.22.0",
    "nodejs-info": "^1.1.1",
    "nodemailer": "^4.6.0",
    "scrypt": "^6.0.3",
    "slug": "^0.9.1",
    "twilio": "^3.12.0",
    "useragent": "^2.3.0",
    "xmldom": "^0.1.27",
    "xmlify": "^1.1.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "babel-eslint": "^8.2.2",
    "base-64": "^0.1.0",
    "chai": "^4.1.2",
    "csv-parse": "^2.0.4",
    "cypress": "^2.0.4",
    "eslint": "^4.19.1",
    "mocha": "^5.0.1",
    "nodemon": "^1.15.1",
    "npm-check": "^5.6.0",
    "npm-check-updates": "^2.14.0",
    "nyc": "^11.4.1",
    "stylelint": "^9.1.1",
    "stylelint-config-standard": "^18.1.0",
    "supertest": "^3.1.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "mocha": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
      "array-bracket-spacing": [ "error", "always" ],
      "comma-dangle": [ "error", "always-multiline" ],
      "comma-spacing": [ "error" ],
      "curly": [ "error", "multi-line" ],
      "indent": [ "error", 4, { "SwitchCase": 1 } ],
      "key-spacing": [ "error", { "align": "value" } ],
      "keyword-spacing": [ "error" ],
      "no-case-declarations": "off",
      "no-console": [ "warn", { "allow": [ "error", "info" ] } ],
      "no-redeclare": "warn",
      "no-shadow": "warn",
      "no-unused-vars": "warn",
      "no-var": "error",
      "object-curly-spacing": [ "error", "always" ],
      "prefer-const": "error",
      "quotes": [ "error", "single", "avoid-escape" ],
      "require-await": "error",
      "semi": [ "error", "always" ],
      "space-before-blocks": [ "error", "always" ],
      "space-in-parens": [ "error" ],
      "strict": [ "error", "global" ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "block-opening-brace-space-before": [ "always", { "severity": "warning" } ],
      "color-hex-length": "long",
      "comment-empty-line-before": null,
      "indentation": 4,
      "selector-class-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
      "selector-list-comma-newline-after": "never-multi-line",
      "string-quotes": "single"
    }
  }
}
