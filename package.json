{
  "name": "thewhistle",
  "description": "The Whistle prototype",
  "author": "Chris Veness",
  "license": "Proprietory",
  "version": "0.0.0",
  "main": "app.js",
  "scripts": {
    "start": "forever --minUptime 1000 --spinSleepTime 1000 -c 'node -r @std/esm' app.js",
    "start-dev": "nodemon -e js,json,html --ignore db/reports.json --ignore static/report-docs/ -r @std/esm app.js",
    "start-devtools": "nodemon --inspect -e js,json,html app.js",
    "test": "mocha --exit -r @std/esm test/*/*.js",
    "test-unit": "mocha --exit -r @std/esm test/unit/*.js",
    "test-intgn": "mocha --exit -r @std/esm test/integration/*.js",
    "lint": "npm run lint-node && npm run lint-browser",
    "lint-node": "eslint --env node --ignore-pattern public --ignore-pattern app-api/apidoc .",
    "lint-browser": "eslint --env browser public/",
    "stylelint": "stylelint public/css/*.css",
    "cover": "istanbul cover node_modules/.bin/_mocha test/*/ -- --exit -r @std/esm",
    "cover-unit": "istanbul cover node_modules/.bin/_mocha test/unit/ -- --exit -r @std/esm",
    "cover-intgn": "istanbul cover node_modules/.bin/_mocha test/integration -- --exit -r @std/esm",
    "apidoc": "apidoc -i app-api -o app-api/apidoc/apidoc",
    "clean": "rm -rf .esm-cache coverage; rm -f logs/a* logs/r* logs/t* package-lock.json"
  },
  "engines": {
    "node": "^8.9.0"
  },
  "dependencies": {
    "@std/esm": "^0.19.1",
    "aws-sdk": "^2.179.0",
    "chrono-node": "^1.3.5",
    "dateformat": "^3.0.2",
    "debug": "^3.1.0",
    "dotenv": "^4.0.0",
    "exiftool-vendored": "^4.14.1",
    "forever": "^0.15.3",
    "fs-extra": "^5.0.0",
    "geodesy": "^1.1.2",
    "glob": "^7.1.2",
    "glob-promise": "^3.3.0",
    "google-libphonenumber": "^3.0.10",
    "handlebars": "^4.0.11",
    "html-pdf": "^2.2.0",
    "html-to-text": "^3.3.0",
    "isemail": "^3.0.0",
    "jimp": "^0.2.28",
    "js-yaml": "^3.10.0",
    "jsdom": "^11.5.1",
    "json2csv": "^3.11.5",
    "jsonwebtoken": "^8.1.0",
    "koa": "^2.4.1",
    "koa-body": "^2.5.0",
    "koa-compose": "^4.0.0",
    "koa-compress": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-flash": "^1.0.0",
    "koa-handlebars": "^2.0.0",
    "koa-lusca": "^2.2.0",
    "koa-router": "^7.3.0",
    "koa-send": "^4.1.2",
    "koa-session": "^5.7.0",
    "koa-static": "^4.0.2",
    "markdown-it": "^8.4.0",
    "markdown-it-anchor": "^4.0.0",
    "markdown-it-include": "^1.0.0",
    "moment": "^2.20.1",
    "mongodb": "^3.0.1",
    "node-fetch": "^1.7.3",
    "node-geocoder": "^3.21.1",
    "nodejs-info": "^1.1.0",
    "nodemailer": "^4.4.1",
    "scrypt": "^6.0.3",
    "slug": "^0.9.1",
    "twilio": "^3.11.0",
    "useragent": "^2.2.1",
    "xmldom": "^0.1.27",
    "xmlify": "^1.1.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "babel-eslint": "^8.2.1",
    "base-64": "^0.1.0",
    "chai": "^4.1.2",
    "eslint": "^4.15.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^4.1.0",
    "nodemon": "^1.14.10",
    "npm-check": "^5.5.2",
    "npm-check-updates": "^2.14.0",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "supertest": "https://github.com/mikec/supertest.git"
  },
  "@std/esm": {
    "esm": "js"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "mocha": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
      "array-bracket-spacing": [ "error", "always" ],
      "comma-dangle": [ "error", "always-multiline" ],
      "curly": [ "error", "multi-line" ],
      "indent": [ "error", 4, { "SwitchCase": 1 } ],
      "key-spacing": [ "error", { "align": "value" } ],
      "no-case-declarations": "off",
      "no-console": [ "warn", { "allow": [ "error", "info" ] } ],
      "no-redeclare": "warn",
      "no-shadow": "warn",
      "no-unused-vars": "warn",
      "no-var": "error",
      "object-curly-spacing": [ "error", "always" ],
      "prefer-const": "error",
      "quotes": [ "error", "single", "avoid-escape" ],
      "require-await": "error",
      "semi": [ "error", "always" ],
      "space-before-blocks": [ "error", "always" ],
      "strict": [ "error", "global" ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "block-opening-brace-space-before": [ "always", { "severity": "warning" } ],
      "color-hex-length": "long",
      "comment-empty-line-before": null,
      "indentation": 4,
      "selector-class-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
      "selector-list-comma-newline-after": "never-multi-line",
      "string-quotes": "single"
    }
  }
}
